{% extends 'base.html.twig' %}

{% block title %}Services
{% endblock %}

{% block body %}


	<div class="container-fluid entete text-primary d-flex justify-content-center h-33">
		<div class="container bg-secondary title">
			<h1 class="text-center">Nos services</h1>
		</div>
	</div>

	<div class="card d-flex flex-row justify-content-center mb-3" style="width: 18rem; ">

		{% for service in services %}
			<div class="card-body">
				<img src="{{service.image}}" alt="{{service.nom}}">
				<h5 class="card-title">{{service.nom}}</h5>
				<p class="card-text">{{service.description}}</p>
			</div>
		{% endfor %}

	</div>
{% endblock %}
